<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("#showAlert").hide();
    $("#showLoader").hide();
    $(function () {
        $("#btnGet").click(function (e) {
            $("#showLoader").show();
            e.preventDefault();
          
            
            if(validate())
            {
              $.ajax({
                type: "POST",
                url: "/Index?handler=GetAPI",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                data: { "email": $("#email").val(), "password": $("#password").val() },
               
                
                success: function (response) {
                      if(response)
                      {
                            window.location.href = "/Home";
                      }
                      else{
                            $("#showAlert").empty()
                          $("#showAlert").append("<strong>Invalid email or password</strong>")
          
                           $("#showAlert").show();
                      }
                          
                       
                       
                        $("#showLoader").hide();
                       
                },
                failure: function (response) {
                        $("#showLoader").hide();
                       
                },
                error: function (response) {
                        $("#showLoader").hide();
                        
                }
            });

            }
          
        });
     
    });

    function validate() {
        $("#showAlert").hide();
       
        var isOK = true;
        if ($("#email").val().length < 1) {
            //$('#email').after('<span class="error">This field is required</span>');
            isOK = false;
            $("#showAlert").empty()
            $("#showAlert").append("<strong>Enter a valid email</strong>")
          
            $("#showAlert").show();
            $("#showLoader").hide();
            //e.stopPropagation();
            return false

        } else {
            var regEx =/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;

            var validEmail = regEx.test($("#email").val());
            if (!validEmail) {
                $("#showAlert").empty()
                $("#showAlert").append("<strong>Enter a valid email</strong>")
                //$('#email').after('<span class="error">Enter a valid email</span>');
                isOK = false;
                $("#showAlert").show()
                $("#showLoader").hide();
                //e.stopPropagation();;
                 return false
            }
        }
        if ($("#password").val().length < 8) {
            $("#showAlert").empty()
            $("#showAlert").append("<strong>At least 8 charaters required</strong>")
           
            //$('#password').after('<span class="error">Password must be at least 8 characters long</span>');
            isOK = false;
            $("#showLoader").hide();
            //e.stopPropagation();
            $("#showAlert").show();
            return false
        }
        return isOK;
    }

    
</script>